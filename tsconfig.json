{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true
    },
    "include": [
        "**/*.ts",
        "**/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}